<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:layout_width="194dp"
            android:layout_height="40dp"
            android:id="@+id/categoryTextView" android:textSize="24sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="27dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"/>
    <TextView
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:id="@+id/priceTextView" android:textSize="24sp" android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@+id/categoryTextView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="26dp"/>
</android.support.constraint.ConstraintLayout>